<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter, '投稿者' %><br/>
      <%= f.text_field :commenter %>
    </p>

    <p>
      <%= f.label :body, 'コメント' %><br/>
      <%= f.text_area :body, cols: 60, rows: 3 %>
    </p>

    <p>
      <%= f.submit '投稿' %>
    </p>
<% end %>